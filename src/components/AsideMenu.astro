---
import HomeIcon from '@/icons/Home.astro'
import SearchIcon from '@/icons/Search.astro'
import LibraryIcon from '@/icons/Library.astro'
import SideMenuItem from '@/components/SideMenuItem.astro'
import SideMenuCard from '@/components/SideMenuCard.astro'

import {playlists} from '../lib/data'
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-customColor rounded-lg p-2">
        <ul>
            <SideMenuItem href='/'>
                <HomeIcon/> Inicio
            </SideMenuItem>
            <SideMenuItem href='/#'>
                <SearchIcon/> Buscar
            </SideMenuItem>
        </ul>
    </div>
    <div class="bg-customColor rounded-lg p-1 flex-1">
        <ul>
            <SideMenuItem href='/library'>
                <LibraryIcon/> Tu biblioteca
            </SideMenuItem>

            {
                playlists.map(playlist=> <SideMenuCard playlist={playlist}/>)
            }
        </ul>
    </div>
</nav>

<style>
    .bg-customColor {
        background-color: rgba(12, 12, 12, 1);
    }
</style>